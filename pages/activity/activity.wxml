<view class="main page" id="main" catchtouchmove='catchtouchmove'> 
  <!-- 开机动画 -->
  <view class='starting_up' wx:if="{{startingUpStatus}}">
    <image class='liquor_bg' id="liquorDg" style='right:{{liquorBgSize.right}}px;' animation="{{liquorBgAnimation}}" src='/images/liquorBg.png'></image> 
    <view class='loading_content'>
      <image class='logo' src='/images/logo.png'></image>
      <image class='start_btn' wx:if="{{loadingSuccess}}" catchtouchstart='startActivity' src='/images/start.png'></image>
      <button open-type='getUserInfo' class='getUserInfo' wx:if="{{authorization}}" bindgetuserinfo="getuserinfo">授权</button>
      <view class='loading_progress' wx:if="{{!loadingSuccess}}">
        <image class='loading' src='/images/loading.png'></image>
        <view class='progress_bar'>
          <image class='progress1' src='/images/progress1.png' ></image>
          <view class='progress2'>
            <image src='/images/progress2.png' animation="{{progressAnimation}}"></image>
          </view>
          <image class='progress3' src='/images/progress3.png'></image>
        </view>
      </view>
    </view>
  </view>
  <view class='activity_content'>
    <view class='start_animation'>
      <image mode="aspectFill" bindload="loadStatic" wx:for="{{startAnimation}}" wx:key="item" class="animation_img {{startAnimationNum == index?'active':''}}" src='{{item}}'></image>
      <image class='skip' catchtouchstart='skipAnimation' src='http://img8.ontheroadstore.com/upload/180621/1da1fb71a521603fb91ec4941a17c03c.png'></image>
    </view>
    <!-- <view class="weave weave_show {{startAnimationStatus ? 'weave_show':''}}"> -->
    <view class="weave {{startAnimationStatus ? 'weave_show':''}}"> 
      <!-- 背景切换 -->
      <image class='bg1' mode="aspectFill" src='http://img8.ontheroadstore.com/upload/180608/2f6ea9815a50c6469fb7f7ecb1f03310.jpg'></image>
      <image class='bg2' mode="aspectFill" src='http://img8.ontheroadstore.com/upload/180612/f08ae5f6d9d4e266823d110b370d44b9.png'></image>
      <view class='bg2_end' wx:if="{{hooliganismStatus}}">
        <image class='hooliganism1' wx:if="{{hooliganismNum >= 1}}" src='http://img8.ontheroadstore.com/upload/180626/db09d0c5e7cf5369f75c85cd423ce133.png'></image>
        <image class='hooliganism2' wx:if="{{hooliganismNum >= 2}}" src='http://img8.ontheroadstore.com/upload/180626/88c295fc36f20a4de314abb38cf1f36a.png'></image>
        <image class='hooliganism3' wx:if="{{hooliganismNum >= 3}}" src='http://img8.ontheroadstore.com/upload/180626/ab29a5d2fc74d535b43abc8915bddfce.png'></image>
      </view>
      <image class='bg3' animation="{{bgAnimation1}}" hidden="{{!combatGifStatus}}" mode="aspectFill" src='http://img8.ontheroadstore.com/upload/180622/3027991c49c5a42a07b9bc5ba8998b0c.gif'></image>
      <image class='bg4' hidden="{{!(procedureState == 'die')}}" mode="aspectFill" src='http://img8.ontheroadstore.com/upload/180621/a38e4eb3eb68466d3774fca550f81385.png'></image>
      <!-- 顶部信息 -->
      <view class='damage' wx:if="{{strikeStatus}}">
        <image class='jian' wx:if="{{procedureState != 'slience'}}" src='http://img8.ontheroadstore.com/upload/180611/38425a6c6954768f52a0b576aa452c56.png'></image>
        <view class='damage_content' wx:if="{{procedureState != 'slience'}}">
          <view class='damage_num'>
            <view class='damage_num_bg' style="width: {{damageNum < 5 ? '5' : damageNum }}%;"></view>
          </view>
        </view>
        <image class='regulation' data-status="1" catchtouchstart='activityInfo' src='http://img8.ontheroadstore.com/upload/180611/760fe00ac3b261f66627ecb0ef575136.png'></image>
        <image class='reset' catchtouchstart='resetGameShow' data-status="1" src='http://img8.ontheroadstore.com/upload/180611/2085b59674fde23e5ea7163fd9c0f19d.png'></image>
        <view class='damage_text' wx:if="{{procedureState != 'slience'&&procedureState!='die'}}">对酒保造成的伤害总数：{{damageNum}}(可优惠{{employCash}}元)</view>
        <view class='damage_text' wx:if="{{procedureState!='slience'&&procedureState=='die'}}">已经进小黑屋了，拿着狱友给的20块钱忏悔吧</view>
        <view class='reset_text' catchtouchstart='resetGameShow' data-status="1">重玩</view>
      </view>
      <!-- 底部按钮 -->
      <view class='btns' wx:if="{{strikeStatus}}">
        <image wx:if="{{procedureState != 'slience'}}" catchtouchstart='openBattlefield' class='btn_item battlefield' src='http://img8.ontheroadstore.com/upload/180611/d2465ba11ddd9ddf23987bae585f7e44.png'></image>
        <image catchtouchstart='openWinelist' class="btn_item winelist {{procedureState == 'slience' ? 'winelist_slience' : ''}}" src='http://img8.ontheroadstore.com/upload/180611/b27aab2b27baac880f08e633b6f0d4a5.png'></image>
        <image hidden='{{!(blowNum >= 3)}}' class='btn_item share' src='http://img8.ontheroadstore.com/upload/180611/e1e83e836c444a01c886ffe4eb8a16d6.png'></image>
        <button hidden='{{!(blowNum >= 3)}}' class='share btn_item' open-type="share">分享</button>
      </view>
      <!-- 拳打脚踢 -->
      <view class='blow' wx:if="{{blowStatus}}">
        <image class='blow_fist' catchtouchstart='blow' data-type="1" src='http://img8.ontheroadstore.com/upload/180611/2dcd6449cbc146a26de27d0465c25b38.png'></image>
        <image class='blow_foot' catchtouchstart='blow' data-type="2" src='http://img8.ontheroadstore.com/upload/180611/0a7612b02ba0425c99a9aaaa69d725c2.png'></image>
      </view>
      <!-- 打击动画 -->
      <view class='blow_animation' wx:if="{{dialogGifStatus}}" catchtouchstart="{{dialogAnimationStatus? 'closeDialogGif':''}}">
        <image src='{{msgData.img}}' class='blow_gif' wx:if="{{!dialogAnimationStatus}}"></image>
        <image animation="{{opacityAnimstion}}" src='/images/fist.png' class='fist' wx:if="{{dialogAnimationStatus && blowType == 1}}"></image>
        <image animation="{{opacityAnimstion}}" src='/images/foot.png' class='foot' wx:if="{{dialogAnimationStatus && blowType == 2}}"></image>
        <view wx:if="{{dialogAnimationStatus}}">{{msgData.msg}}</view>
      </view>
      <!-- 文字提示窗 -->
      <view class='dialog'>
        <!-- 提示窗1 -->
        <view class='dialog1' hidden="{{!(dialogNum == 1)}}">
          <image bindload="loadStatic" src='http://img8.ontheroadstore.com/upload/180611/8ec779aedf80c9f90bd25b736c8eacd8.png'></image>
          <view class='dialog_text'>
            <view class='subtitle' wx:if="{{activeText == -1}}">叮！你发现酒保在耍流氓 ！</view>
            <view class='subtitle' wx:if="{{activeText == 0}}">{{textArr[0].title}}</view>
            <view class='select_item' catchtouchstart='samaritan' wx:if="{{activeText==-1||(activeText==0&&textArr[0].selectShwo)}}">
              <image src='http://img8.ontheroadstore.com/upload/180611/5c33da1f088c5f7149a0f0ca9b3dbef1.png'></image>
              <view>见义勇为</view>
            </view>
          <view class='select_item' catchtouchstart='slienceChooice' wx:if="{{activeText==-1||(activeText==0&&textArr[0].selectShwo)}}">
              <image src='http://img8.ontheroadstore.com/upload/180611/5c33da1f088c5f7149a0f0ca9b3dbef1.png'></image>
              <view>默不作声</view>
            </view>
          </view>
        </view>
        <!-- 提示窗2 围观群众对你见义勇为的行为表示认可，他们凑了15元给你买酒 -->
        <view class='dialog2' hidden="{{!(dialogNum == 2)}}">
          <image bindload="loadStatic" src='http://img8.ontheroadstore.com/upload/180612/dc84190b980f6f68a1487da97307690b.png'></image>
          <view class='dialog_text'>
            <view class='subtitle' wx:if="{{activeText == -1}}">围观群众对你见义勇为的行为表示认可，他们凑了{{employCash}}元给你买酒</view>
            <view class='subtitle' wx:if="{{activeText == 1}}">{{textArr[1].title}}</view>
            <view class='select_item' catchtouchstart='samaritan' wx:if="{{activeText==1&&textArr[1].selectShwo}}">
              <image src='http://img8.ontheroadstore.com/upload/180611/5c33da1f088c5f7149a0f0ca9b3dbef1.png'></image>
              <view>老子还能再打</view>
            </view>
            <view class='select_item' catchtouchstart='openWinelist' wx:if="{{activeText==1&&textArr[1].selectShwo}}">
              <image src='http://img8.ontheroadstore.com/upload/180611/5c33da1f088c5f7149a0f0ca9b3dbef1.png'></image>
              <view>去挑瓶酒</view>
            </view>
          </view>
        </view>
        <!-- 提示窗3 酒保叫来帮手，这是茬架啊，再想动手只能 -->
        <view class='dialog3' hidden="{{!(dialogNum == 3)}}">
          <image bindload="loadStatic" src='http://img8.ontheroadstore.com/upload/180612/b47ab85f80eb92bd8b3b6e9a900d430d.png'></image>
          <view class='dialog_text'>
            <view class='subtitle' wx:if="{{activeText == -1}}">酒保叫来帮手，这是茬架啊，再想动手只能叫人了</view>
            <view class='subtitle' wx:if="{{activeText == 2}}">{{textArr[2].title}}</view>
            <view class='select_item' wx:if="{{activeText==2&&textArr[2].selectShwo}}">
              <image src='http://img8.ontheroadstore.com/upload/180611/5c33da1f088c5f7149a0f0ca9b3dbef1.png'></image>
              <view>叫人一起动手！</view>
            </view>
            <view class='select_item' catchtouchstart='openWinelist' wx:if="{{activeText==2&&textArr[2].selectShwo}}">
              <image src='http://img8.ontheroadstore.com/upload/180611/5c33da1f088c5f7149a0f0ca9b3dbef1.png'></image>
              <view>怂了，不打了，拿酒走人</view>
            </view>
            <view class='desc'>(好友伤害计入你的总伤害，打的越多，奖金越多)</view>
            <button class='share' open-type="share" wx:if="{{activeText==2&&textArr[2].selectShwo}}">分享</button>
          </view>
        </view>
        <!-- 提示窗4 邀请成功，点击我的战报可随时查看朋友 造成的伤害，你可以动手了-->
        <view class='dialog4' hidden="{{!(dialogNum == 4)}}">
          <image src='http://img8.ontheroadstore.com/upload/180612/ce681fd8595ae3fd5b127f9e1080ccde.png'></image>
          <view class='dialog_text'>
            <view class='subtitle'>邀请成功，点击我的战报可随时查看朋友造成的伤害，你可以动手了</view>
          </view>
        </view>
        <!-- 提示窗5  腿软了！赶紧叫人吧！-->
        <view class='dialog5' hidden="{{!(dialogNum == 5)}}">
          <image src='http://img8.ontheroadstore.com/upload/180612/ce681fd8595ae3fd5b127f9e1080ccde.png'></image>
          <view class='dialog_text'>
            <view class='subtitle'>{{dialogText5.title}}</view>
          </view>
        </view>
        <!-- 提示窗6  酒保瘫倒在地上，再打就出人命了！-->
        <view class='dialog6' hidden="{{!(dialogNum == 6)}}">
          <image src='http://img8.ontheroadstore.com/upload/180612/ce681fd8595ae3fd5b127f9e1080ccde.png'></image>
          <view class='dialog_text'>
            <view class='subtitle' wx:if="{{activeText == -1}}">酒保瘫倒在地上，再打就出人命了！</view>
            <view class='subtitle' wx:if="{{activeText == 3}}">{{textArr[3].title}}</view>
            <view class='select_item' catchtouchstart='setDialogText6' wx:if="{{activeText==3&&textArr[3].selectShwo}}">
              <image src='http://img8.ontheroadstore.com/upload/180611/5c33da1f088c5f7149a0f0ca9b3dbef1.png'></image>
              <view>偏不！我TM就要搞死你丫的</view>
            </view>
            <view class='select_item' catchtouchstart='ending' data-ending="1" wx:if="{{activeText==3&&textArr[3].selectShwo}}">
              <image data-ending="1" src='http://img8.ontheroadstore.com/upload/180611/5c33da1f088c5f7149a0f0ca9b3dbef1.png'></image>
              <view data-ending="1">见好就收，拿奖金买酒</view>
            </view>
          </view>
        </view>
        <!-- 提示窗7  都他妈说了不能打了你还打，请选择在小黑 屋中度过余生的方式-->
        <view class='dialog7' hidden="{{!(dialogNum == 7)}}">
          <image src='http://img8.ontheroadstore.com/upload/180612/ce681fd8595ae3fd5b127f9e1080ccde.png'></image>
          <image class='ambulance' src='http://img8.ontheroadstore.com/upload/180612/025797ee639c2a38629eb0b4ae049d67.png'></image>
          <image class='paddy_wagon' src='http://img8.ontheroadstore.com/upload/180612/a61dea0eb082d1679cef9f4a698fd25c.png'></image>
          <view class='dialog_text'>
            <view class='subtitle' wx:if="{{activeText == -1}}">都他妈说了不能打了你还打，请选择在小黑屋中度过余生的方式</view>
            <view class='subtitle' wx:if="{{activeText == 4}}">{{textArr[4].title}}</view>
            <view class='select_item' catchtouchstart='ending' data-ending="2" wx:if="{{activeText==-1||(activeText==4&&textArr[4].selectShwo)}}">
              <image data-ending="2" src='http://img8.ontheroadstore.com/upload/180611/5c33da1f088c5f7149a0f0ca9b3dbef1.png'></image>
              <view data-ending="2">拒不悔改</view>
            </view>
            <view class='select_item' catchtouchstart='ending' data-ending="3" wx:if="{{activeText==-1||(activeText==4&&textArr[4].selectShwo)}}">
              <image data-ending="3" src='http://img8.ontheroadstore.com/upload/180611/5c33da1f088c5f7149a0f0ca9b3dbef1.png'></image>
              <view data-ending="3">悔不当初</view>
            </view>
          </view>
        </view>
        <!-- 提示窗8  狱友对你的硬气很赞扬，给你凑了20块钱 买酒-->
        <view class='dialog8' hidden="{{!(dialogNum == 8)}}">
          <image src='http://img8.ontheroadstore.com/upload/180612/ce681fd8595ae3fd5b127f9e1080ccde.png'></image>
          <view class='dialog_text'>
            <view class='subtitle' wx:if="{{activeText == -1}}">狱友对你的硬气很赞扬，给你凑了20块钱买酒</view>
            <view class='subtitle' wx:if="{{activeText == 5}}">{{textArr[5].title}}</view>
            <view class='select_item' catchtouchstart='ending' data-ending="4" wx:if="{{activeText==5&&textArr[5].selectShwo}}">
              <image data-ending="4" src='http://img8.ontheroadstore.com/upload/180611/5c33da1f088c5f7149a0f0ca9b3dbef1.png'></image>
              <view data-ending="4">接受好意</view>
            </view>
          </view>
        </view>
        <!-- 提示窗9  酒保对你臭不要脸的行为表示认同，送了 你一张20元优惠券-->
        <view class='dialog9' hidden="{{!(dialogNum == 9)}}">
          <image src='http://img8.ontheroadstore.com/upload/180612/ce681fd8595ae3fd5b127f9e1080ccde.png'></image>
          <view class='dialog_text'>
            <view class='subtitle' wx:if="{{activeText == -1}}">酒保对你臭不要脸的行为表示认同，送了你一张20元优惠券</view>
            <view class='subtitle' wx:if="{{activeText == 7}}">{{textArr[7].title}}</view>
            <view class='select_item' catchtouchstart='slience' wx:if="{{activeText==-1||(activeText==7&&textArr[7].selectShwo)}}">
              <image src='http://img8.ontheroadstore.com/upload/180611/5c33da1f088c5f7149a0f0ca9b3dbef1.png'></image>
              <view>收下贿赂买瓶酒然后报警</view>
            </view>
            <view class='select_item' catchtouchstart='samaritan' wx:if="{{activeText==-1||(activeText==7&&textArr[7].selectShwo)}}">
              <image src='http://img8.ontheroadstore.com/upload/180611/5c33da1f088c5f7149a0f0ca9b3dbef1.png'></image>
              <view>不行我后悔了，老子要干他丫的</view>
            </view>
          </view>
        </view>
        <!-- 提示窗10  那个！这页面我没时间做，你要不重来吧-->
        <view class='dialog10' hidden="{{!(dialogNum == 10)}}"> 
          <image class='dialog10_bg' src='http://img8.ontheroadstore.com/upload/180613/062f383647a33c990294b20c570ef475.png'></image>
          <view class='dialog10_content'>
          <image src='http://img8.ontheroadstore.com/upload/180613/54adb8156707ec164d59d0fc4d4a5d03.png'></image>
            <view class='dialog_text'>
              <view class='subtitle' wx:if="{{activeText == -1}}">那个！这页面我没时间做，你要不重来吧</view>
              <view class='subtitle' wx:if="{{activeText == 6}}">{{textArr[6].title}}</view>
              <view class='select_item'  catchtouchstart='ending' data-ending="5" wx:if="{{activeText==6&&textArr[6].selectShwo}}">
                <image data-ending="5" src='http://img8.ontheroadstore.com/upload/180613/9a48b9c4a4fb9008015cf48e054eb146.png'></image>
                <view data-ending="5">保重！兄弟</view>
              </view>
            </view>
          </view>
        </view>
        <!-- 重置窗 -->
        <view class='reset_dialog' hidden="{{resetDialogStatus}}">
          <image src='http://img8.ontheroadstore.com/upload/180612/dc84190b980f6f68a1487da97307690b.png'></image>
          <view class='dialog_text'>
            <view class='subtitle'>重新开始会丢失当前所有奖励！</view>
            <view class='select_item' catchtouchstart='resetGame'>
              <image src='http://img8.ontheroadstore.com/upload/180611/5c33da1f088c5f7149a0f0ca9b3dbef1.png'></image>
              <view>老子不在乎！就是要重玩</view>
            </view>
            <view class='select_item' catchtouchstart='resetGameShow'>
              <image data-status="0" src='http://img8.ontheroadstore.com/upload/180611/5c33da1f088c5f7149a0f0ca9b3dbef1.png'></image>
              <view data-status="0">手抖了！不好意思</view>
            </view>
          </view>
        </view>
        <!-- 活动介绍 -->
        <view class='activity_info' wx:if="{{activityInfoStatus}}">
          <view class='activity_info_bg'>
            <image src='http://img8.ontheroadstore.com/upload/180613/df8dc7a8ba24281f95ba82292676b4d2.png'></image>
            <view class='activity_info_text'>
              <image catchtouchstart='activityInfo' data-status="0" class='close' src='http://img8.ontheroadstore.com/upload/180613/a3ae194cc6c5362bc72ffa7b0daae7f4.png'></image>
              <view class='title'>活动规则</view>
              <view class='subhead'>购买</view>
              <view class='item'>1.点击“拳打”或“飞腿”进行攻击，对酒保造成的伤害数值等同与优惠金额。</view>
              <view class='item'>2.可根据自己的伤害值（即优惠金额），以优惠价格买酒，不同商品优惠力度不同。</view>
              <view class='item'>3.当可用优惠金额高于已选商品的最大优惠值时，剩余的优惠金额可在下次购买使用。</view>
              <view class='subhead'>分享</view>
              <view class='item'>1.可通过邀请好友解锁更多攻击次数</view>
              <view class='item'>2.邀请成功后，朋友造成的伤害计入个人总伤害 ，朋友越多优惠金额越高。</view>
              <view class='annotation'>本活动截止至7月5日。活动最终解释权归公路商店所有</view>
            </view>
          </view>
        </view>


      </view> 
      <!-- 我的战报 -->
      <!-- <view class='user_battlefield'  wx:if="{{battlefieldStatus}}"> -->
      <view class='user_battlefield' wx:if="{{battlefieldStatus}}">
        <view class='battlefield_content'>
          <image src='http://img8.ontheroadstore.com/upload/180613/f1456d689c5709307e82be208495e782.png'></image>
          <view class='battlefield_info'>
            <image class='close' catchtouchstart='closeWinelistBattlefield' src='http://img8.ontheroadstore.com/upload/180613/a3ae194cc6c5362bc72ffa7b0daae7f4.png'></image>
            <view class='title'>我的战报</view> 
            <view class='user_info'>
              <image class='cover_img' src='{{battlefieldInfo.user.avatar}}'></image>
              <view class='user_name'>{{battlefieldInfo.user.wx_name}}</view>
              <view class='user_damage'>我的伤害： {{battlefieldInfo.myHurt}}  朋友的伤害：{{battlefieldInfo.myFriendHurt}}</view>
            </view>
            <view class='total_damage'>共对酒保造成{{battlefieldInfo.hit}}点伤害</view>
            <view class='discounts'>可使用优惠： {{battlefieldInfo.cash}} 元</view>
            <view class='combat_title'>战斗记录</view>
            <view class='combats'>
              <view class='item' wx:for="{{activerecordLog}}" wx:key="item">
                <image src='{{item.avatar}}'></image>
                <view>{{item.msg}}</view>
              </view>
              
            </view>
            <view class='page'>
              <view class='up' wx:if="{{activeRecordLogPage != 0}}" catchtouchstart='tabRecordLogPage' data-page="up">
                <image data-page="up" src='http://img8.ontheroadstore.com/upload/180613/755c460e9b154a02119c267b671f9753.png'></image>
                <text data-page="up">上一页</text>
              </view>
              <view class='next' wx:if="{{activeRecordLogPage != recordLogPage && recordLogPage != 0 && recordLog.length!=0}}" catchtouchstart='tabRecordLogPage' data-page="next">
                <text data-page="next">下一页</text>
                <image data-page="next" src='http://img8.ontheroadstore.com/upload/180613/755c460e9b154a02119c267b671f9753.png'></image>
              </view>
            </view>
            <view class='operate'>
              <view class='buy_liquor' catchtouchstart='openWinelist'>
                <image src='http://img8.ontheroadstore.com/upload/180613/47f43d8e8ae17dee5df717a5a7a20d00.png'></image>
                <view>打够了挑瓶酒</view>
              </view>
              <view class='create_img' catchtouchstart='openBattlefieldReport' data-status="1">
                <image data-status="1" src='http://img8.ontheroadstore.com/upload/180613/47f43d8e8ae17dee5df717a5a7a20d00.png'></image>
                <view data-status="1">生成战报图</view>
              </view>
            </view>
          </view>
        </view>
      </view>
      <!-- 战报图片 -->
      <view class='battlefield_report' wx:if="{{battlefieldReportStatus}}">
        <canvas canvas-id="showCanvas" class='show_canvas'></canvas>
        <canvas canvas-id="hiddenCanvas" class='hidden_canvas'></canvas>
         <view class='close'  catchtouchstart='openBattlefieldReport' data-status="0">取消</view> 
         <view class='preserve' catchtouchstart='preserveImg'>保存相册</view> 
      </view>
      <!-- 酒单 -->
      <!-- <view class='winelist_list' wx:if="{{winelistStatus}}"> -->
      <view class='winelist_list' wx:if="{{winelistStatus}}">
        <view class='winelist_content'>
          <image src='http://img8.ontheroadstore.com/upload/180613/f1456d689c5709307e82be208495e782.png'></image>
          <view class='good_list'>
            <image class='close' catchtouchstart='closeWinelistBattlefield' src='http://img8.ontheroadstore.com/upload/180613/a3ae194cc6c5362bc72ffa7b0daae7f4.png'></image>
            <view class='title'>酒单</view>
            <view class='good_title'>
              <view catchtouchstart='tabGoods' data-active="{{index}}" class="{{goodsActive==index?'active':''}}" wx:for="{{goodList}}" wx:key="item">{{item.type}}</view>
            </view>
            <scroll-view class='items' scroll-y='true'>
              <view class='item' wx:for="{{goodList[goodsActive]['item']}}" wx:key="item">
                <image src='{{item.img}}'></image>
                <view class='post_title'>{{item.post_title}}</view>
                <view class='discounts'>最高可减{{item.max}}元</view>
                <view class='price font_din'>￥ {{item.price}}</view>
                <view class='buy_btn' data-id="{{item.id}}" data-mid="{{item.mid}}" data-uid="{{item.seller_uid}}" data-uname="{{item.seller_name}}" catchtouchstart='paymentBtn' data-img="{{item.img}}" data-post_title="{{item.post_title}}" data-max="{{item.max}}" data-price="{{item.price}}" data-desc="酒精度：{{item.capacity}} 净含量：{{item.concentration}}">购买</view>
              </view>
            </scroll-view>
            <view class='discounts_num'>可用优惠： {{employCash}} 元</view>
          </view>
        </view>
      </view>
      <!-- 选择地址购买 -->
      <view class='payment' wx:if="{{orderDialogStatus}}">
        <view class='payment_dialog'>
          <image src='http://img8.ontheroadstore.com/upload/180615/4dc446fc68e787463f2029174b4fc3d3.png'></image>
          <view class='payment_content'>
            <image class='close' catchtouchstart='closePayment' src='http://img8.ontheroadstore.com/upload/180613/a3ae194cc6c5362bc72ffa7b0daae7f4.png'></image>
            <view class='title'>选择收货地址</view>
            <view class='address' catchtouchstart='selectAddress'>
              <image class='icon' src='/images/addressWhite.png'></image>
              <view class='no_address' wx:if="{{!addressInfo}}">选择地址</view>
              <view class='address_info'>
                <view class='user_name'>{{addressInfo.name}}</view>
                <view class='user_tel'>{{addressInfo.telphone}}</view>
                <view class='details'>{{addressInfo.province}}{{addressInfo.city}}{{addressInfo.county}}{{addressInfo.detail}}</view>
              </view>
              <image class='gt' src='/images/gtWhite.png'></image>
            </view>
            <view class='good_info'>
              <image src='{{activeGood.img}}'></image>
              <view class='post_title'>{{activeGood.post_title}}</view>
              <view class='good_desc'>{{activeGood.desc}}</view>
              <view class='price font_din'>￥ {{activeGood.max}} <text class='font_din'>￥ {{activeGood.price}}</text></view>
            </view>
            <view class='desc'>优惠金额会随好友助拳实时变化，具体金额以支付时为准</view>
            <view class='payment_btn'>
              <image src='http://img8.ontheroadstore.com/upload/180614/b77d6fd8262e0a4ffbd0d1ef66bc4923.png'></image>
              <view catchtouchstart='payment'>确认购买</view>
            </view>
          </view>
        </view>
      </view>
      <image src='http://img8.ontheroadstore.com/upload/180622/c56c8d58d9e36fbe34740d7753843671.png' class='shareImg'></image>
      <image src='http://img8.ontheroadstore.com/upload/180625/4e494cc1a10955965bc5fd92cc1ae909.png' catchtouchstart='returnIndex' class='returnIndex'></image>
    </view>
  </view>
</view>